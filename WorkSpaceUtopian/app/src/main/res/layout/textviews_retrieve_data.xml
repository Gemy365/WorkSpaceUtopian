<?xml version="1.0" encoding="utf-8"?><!--android:descendantFocusability="blocksDescendants"
If Item Of Listview Not Allow Clicking-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="2dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="4sp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/retrieve_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:hint="Name"
            android:singleLine="true"
            android:text=""
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/retrieve_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Phone"
                android:inputType="number"
                android:padding="16dp"
                android:singleLine="true"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/retrieve_college"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="College"
                android:padding="16dp"
                android:singleLine="true"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:id="@+id/retrieve_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:hint="Place"
                android:inputType="text"
                android:singleLine="true"
                android:text=""
                android:textColor="#000" />

            <TextView
                android:id="@+id/retrieve_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:hint="Start Time"
                android:inputType="text"
                android:singleLine="true"
                android:text=""
                android:textColor="#000" />

            <ImageView
                android:id="@+id/cust_active"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/active_cust" />

            <TextView
                android:id="@+id/retrieve_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="End Time"
                android:inputType="text"
                android:padding="16dp"
                android:singleLine="true"
                android:text=""
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

</android.support.v7.widget.CardView>